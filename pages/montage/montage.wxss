/* pages/montage/montage.wxss */
view{
  background-color: #f9faff;
}
.tipsview{
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 5px;
  font-size: 12px;
  text-align: center;
  height: 17px;
  line-height: 17px;
  vertical-align: middle;
  color: #A3A3A3;
}

.actionview{
  margin-top: 10px;
  margin-bottom: 20px;
  margin-left: 10px;
  margin-right: 10px;
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

#chosebtn{
  margin-top: 15px;
}

.scrollview{
  position: relative;
}

.prepview{
  margin-top: 10px;
  background-color: #F3F3F3;
  padding: 20rpx;
}

.noimgs{
  margin-top: 10px;
  background-color: #F3F3F3;
  text-align: center;
  vertical-align: middle;
  padding: 20rpx 30rpx;
}

.imgview{
  position: relative;
  display: inline-block;
  width: 223rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.touchimagewxss{
  opacity: 0.4;
  position: absolute;
  width: 223rpx;
}

.imgContainer{
  padding: 20rpx 30rpx;
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
}

.leftContent{
  width: 280rpx;
  background-color: white;
}

/**
* 被选择的img
*/
.simg{
  width: 250rpx;
}

.rightAction{
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  background-color: white;
}

.item{
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}

.btn-item{
  width: 200rpx;
  height: 100rpx;
}


.btn-item-select{
  width: 185rpx;
  height: 85rpx;
}

.actionview-noimg{
  padding: 20rpx 30rpx;
  text-align: center;
}

.actionview-noimg-choose{
  width: 650rpx;
  height: 200rpx;
  margin-top: 40rpx;
}